<!DOCTYPE html>
<html lang="es">
    <head>
        <%- include("./partials/head") %>
    </head>
    
    <body>
        <header>
            <%- include("./partials/navbar") %>
        </header>
        <main class="container">
            <h1 class="text-center">Iniciar sesión</h1>
            <% if (error) { %>
                <div class="container">
                    <ul class="alert alert-danger">
                        <li class="p-2">
                            <%= message %>
                        </li>
                    </ul>
                </div>
            <% } %>
            <form action="/admin/login"
                  method="post"
                  class="bg-light rounded p-2 mx-5">

                <div class="form-group">
                    <label for="username"
                           class="form-label">Usuario:</label>
                    <input id="username"
                           class="form-control"
                           name="username"
                           type="text"
                           placeholder="Usuario...">
                </div>

                <div class="form-group mt-3">
                    <label for="password"
                           class="form-label">Contraseña:</label>
                    <input id="password"
                           class="form-control"
                           name="password"
                           type="password"
                           placeholder="Contraseña...">
                </div>

                <button type="submit"
                        class="btn btn-primary mt-3">
                        Ingresar
                </button>
            </form>
            <%- include("./partials/bootstrap") %>
        </main>
    </body>
</html>
